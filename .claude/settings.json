{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "tools/claude_hook_regen_migration.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "tools/claude_hook_upgrade_safety.sh"
          }
        ]
      }
    ]
  }
}
